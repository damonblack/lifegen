<h1>LifeGen</h1>

<h2>Simplest React.js component that could possibly work.</h2>

<div id="react-app"></div>

<script src="https://cdn.jsdelivr.net/react/0.14.0-rc1/react.js"></script>
<script src="https://cdn.jsdelivr.net/react/0.14.0-rc1/react-dom.js"></script>
<script>
  var characters = [
    { name: "Bob", class: "Warrior", level: "4th" },
    { name: "Susan", class: "Thief", level: "8th" }
  ];
  var characterList = characters.map(function(character) {
    return React.createElement('li', {},
      React.createElement('h3', {}, character.name),
      React.createElement('span', {}, character.level + " level " + character.class)
    );
  });
  var rootElement = React.createElement('div', {},
    React.createElement('h1', {}, "Characters"),
    React.createElement('ul', {}, characterList)
  );

  ReactDOM.render(rootElement, document.getElementById('react-app'));
</script>
